#!/bin/bash

# Cores

COR[0]="\[\033[0m\]" # Normal
COR[1]="\[\033[1;31m\]" # Vermelho
COR[2]="\[\033[1;32m\]" # Verde
COR[3]="\[\033[1;33m\]" # Amarelo
COR[4]="\[\033[1;34m\]" # Azul
COR[5]="\[\033[1;35m\]" # Roxo
COR[6]="\[\033[1;36m\]" # Cian
COR[7]="\[\033[1;37m\]" # Branco
COR[8]="\[\033[01;96m\]" # Azul Claro

DES[0]="\342\224\214\342\224\200" # Linha de canto
DES[1]="" # Linha vertical
DES[2]="\342\224\224\342\224\200\342\224\200\342\225\274" # Linha e ponto
DES[3]="\342\234\227" # Sinal de erro
DES[4]="\342\224\200" # Linha horizontal


# Partes

USER="${COR[0]}\u"
SERVER="${COR[6]}\h"
DIR="${COR[2]}\w"
SEPARADOR="${COR[3]}${DES[4]}"
ANTES="${DES[0]}"
DEPOIS="\n${DES[2]}"
HORARIO="${COR[7]}\t"
CURSOR="${COR[1]}\$"

PS1="${ANTES}${COR[7]}[${USER}@${SERVER}${COR[7]}]${SEPARADOR}${COR[7]}[${DIR}${COR[7]}] (${HORARIO})${DEPOIS}${CURSOR} ${COR[0]}"

#PS1="\[\033[0;32m\]\342\224\214\342\224\200\$([[ \$? != 0 ]] && echo \"[\[\033[0;31m\]\342\234\227\[\033[0;32m\]]\342\224\200\")[$(if [[ ${EUID} == 0 ]]; then echo '\[\033[01;33m\]root\[\033[01;33m\]@\[\033[01;96m\]\h'; else echo '\[\033[0;32m\]\u\[\033[01;37m\]@\[\033[01;34m\]\h'; fi)\[\033[0;32m\]]\342\224\200[\[\033[0;33m\]\w\[\033[0;32m\]]\[\033[1;37m\](\t)\[\033[1;32m\]\n\[\033[0;32m\]\342\224\224\342\224\200\342\224\200\342\225\274 \[\033[0m\]\[\e[01;37m\]\\$ \[\e[0m\]"

